<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".pdfAddActivity">
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24">

        </ImageButton>

        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/backBtn"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo1">

        </ImageView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iconIv"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Add New Books"
                android:textColor="#0E0E0E"
                android:textSize="28sp" />
    <ImageButton
        android:id="@+id/attachBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_attach_file_24">

    </ImageButton>
        <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/titleTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="225dp"
            app:hintEnabled="false">
       <EditText
           android:id="@+id/titleEt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/edittext_background"
           android:drawableStart="@drawable/ic_pdf"
           android:drawablePadding="10dp"
           android:hint="Book Title"
           android:inputType="textPersonName|textCapSentences"
           android:padding="10dp"
           android:textSize="16sp"
           android:textColor="@color/black"
           android:textColorHint="@color/gray">
       </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descreptionTil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_below="@id/titleTil"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/descreptionEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/ic_pdf"
                android:drawablePadding="10dp"
                android:hint="Book Descrition"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/categoryTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descreptionTil"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/ic_category_24"
            android:drawableEnd="@drawable/ic_keyboard"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Book Category"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="16sp">

        </TextView>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryTv"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:text="Upload"
            android:textColor="@color/white">

        </Button>
</RelativeLayout>

    </RelativeLayout>
